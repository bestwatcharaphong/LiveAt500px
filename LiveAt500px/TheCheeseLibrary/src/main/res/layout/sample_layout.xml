<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Name Name Name Name Name Name Name Name Name Name Name Name Name Name Name Name Name Name Name Name"
            android:background="#80000000"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:ellipsize="end"
            android:textColor="#FFFFFF"
            android:textSize="24sp"
            android:maxLines="2"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="Description Description Description Description Description Description Description"/>


    </LinearLayout>
</RelativeLayout>
